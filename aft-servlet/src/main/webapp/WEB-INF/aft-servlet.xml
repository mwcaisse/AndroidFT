<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:mvc="http://www.springframework.org/schema/mvc" 
    xmlns:context="http://www.springframework.org/schema/context"

	xsi:schemaLocation="
	    http://www.springframework.org/schema/beans 
	    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	    http://www.springframework.org/schema/context
	    http://www.springframework.org/schema/context/spring-context-4.0.xsd
	    http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">
        
	
	<!-- Import the data source. Shouldn't be needed anymore -->
	<!-- <import resource="classpath:data-source.xml" /> -->
	
	<!-- JNDI DataSource  -->
	<bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
	    <property name="jndiName" value="java:comp/env/jdbc/AFTDatabase" />
	</bean>
	
	<!--  Spring MVC Controllers auto search -->
	<context:component-scan	base-package="com.ricex.aft.servlet.controller" />
	
	<bean id="gsonBean" class="com.google.gson.Gson" factory-bean="gsonFactory" factory-method="constructGson"/> 
	<bean id="gsonFactory" class="com.ricex.aft.servlet.util.GsonFactory" />
	
	<!--  Annotation Driven Controllers -->
	<mvc:annotation-driven>
		<mvc:message-converters>		    
		    <bean id="gsonMessageConverter" class="org.springframework.http.converter.json.GsonHttpMessageConverter" >
		       <property name="gson" ref="gsonBean"/>
		    </bean>
		</mvc:message-converters> 		   
	</mvc:annotation-driven>
	
	<!--  Sql Session Factory for MyBatis-Spring -->
	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="configLocation" value="classpath:mybatis-config.xml" />
	</bean>
	
	<!-- Mapper declaration -->
	
	<!-- Device Mapper -->
	<bean id="deviceMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface" value="com.ricex.aft.servlet.mapper.DeviceMapper" />
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>
	
	<!-- Request Mapper -->
	<bean id="requestMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface" value="com.ricex.aft.servlet.mapper.RequestMapper" />
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>
	
	<!-- File Mapper -->
	<bean id="fileMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface" value="com.ricex.aft.servlet.mapper.FileMapper"/>
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>
	
	
	<!--  Manager Declaration, injects mappers into manager singletons -->
	
	<!-- Device Manager -->
	<bean id="deviceManager" class="com.ricex.aft.servlet.manager.DeviceManager" factory-method="valueOf">
		<constructor-arg value="INSTANCE"/>
		<property name="deviceMapper" ref="deviceMapper" />
	</bean>
	
	<!-- Request Manager -->
	<bean id="requestManager" class="com.ricex.aft.servlet.manager.RequestManager" factory-method="valueOf">
		<constructor-arg value="INSTANCE" />
		<property name="requestMapper" ref="requestMapper" />
	</bean>
	
	<!-- File Manager -->
	<bean id="fileManager" class="com.ricex.aft.servlet.manager.FileManager" factory-method="valueOf">
		<constructor-arg value="INSTANCE" />
		<property name="fileMapper" ref="fileMapper" />
	</bean>
	
	<!-- Multipart Resolver -->
	<bean id="multipartResolver" class="org.springframework.web.multipart.support.StandardServletMultipartResolver">
	</bean>
	
	
</beans>