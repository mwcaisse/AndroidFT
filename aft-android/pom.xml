 		<groupId>com.ricex.aft</groupId>
 		<artifactId>aft</artifactId>
 		<version>0.0.1-SNAPSHOT</version>
	 </parent>
   
	 <modelVersion>4.0.0</modelVersion>
	 <artifactId>aft-android</artifactId>
	 <name>aft-android</name>
